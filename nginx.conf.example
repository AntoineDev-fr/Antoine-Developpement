server {
  listen 80;
  server_name example.com;

  root /var/www/Antoine-Developpement/public;
  index index.html;

  # Front (site statique)
  location / {
    try_files $uri $uri/ /index.html;
  }

  # API -> Node en local
  location /api/ {
    proxy_pass http://127.0.0.1:3001/;
    proxy_http_version 1.1;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    client_max_body_size 1m;
  }

  # Bloque tous les fichiers cach√©s (.env, .git, etc.)
  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

  # Optionnel: bloque quelques extensions sensibles
  location ~* \.(env|log|ini|bak|old|example)$ {
    deny all;
  }
}
